@model web.Models.DeviceListModel

@{
    ViewData["Title"] = "List";
}

<h2>List</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Device Id</th>
            <th>Registration Id</th>
            <th>Primary Key</th>
            <th>Secondary Key</th>
            <th>ID Scope</th>
        </tr>
    </thead>
    <tbody>
@if (Model.Devices != null)
{
    foreach (var item in Model.Devices)
    {
            <tr>
                <td>@item.DeviceId</td>
                <td>@item.RegistrationId</td>
                <td>@item.PrimaryKey</td>
                <td>@item.SecondaryKey</td>
                <td>@item.ID_Scope</td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new DeviceModel { DeviceId = item.DeviceId, RegistrationId = item.RegistrationId, Tags = item.Tags, DeniedDevices = item.DeniedDevices, AllowedDevices = item.AllowedDevices }) |*@
                    @Html.ActionLink("Details", "Details", new DeviceModel { DeviceId = item.DeviceId, RegistrationId = item.RegistrationId }) |
                    @*@Html.ActionLink("Delete", "Delete", new DeviceModel { DeviceId = item.DeviceId, RegistrationId = item.RegistrationId, Tags = item.Tags, DeniedDevices = item.DeniedDevices, AllowedDevices = item.AllowedDevices })*@
                </td>
            </tr>
    }
}
    </tbody>
</table>
